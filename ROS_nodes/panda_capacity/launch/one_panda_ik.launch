<?xml version="1.0"?>
<launch>
<arg name="robot_ns" default="/"/>
<node pkg="rviz" type="rviz" output="screen" name="rviz" args="-d $(find panda_capacity)/launch/config.rviz"/>

<group ns="$(arg robot_ns)">
	<param name="tf_prefix" value="$(arg robot_ns)" />

        <node pkg="tf" type="static_transform_publisher" name="world_ns_connector" args="0 0 0 0 0 0 /world $(arg robot_ns)/world 100"/>

    <param name="robot_description" command="
        $(find xacro)/xacro '$(find franka_description)/robots/panda_arm.urdf.xacro'"/>

	<node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" output="screen"/>

    <node pkg="panda_capacity" name="panda_force_polytope" type="panda_force_polytope.py"/>
    <!--<node pkg="panda_capacity" name="panda_manipulability" type="panda_manipulability.py"/>-->
</group>
    
<!-- inverse kinematics script -->
<node pkg="panda_capacity" name="panda_inverse_kinematics" type="panda_inverse_kinematics.py"/>

<!-- visualisation -->
<node pkg="rqt_ez_publisher" name="rqt_ez_publisher" type="rqt_ez_publisher" output="screen"/>

</launch>
